#!/bin/sh

set -e

ROOT="$(pwd)/root"

if [ "$(id -u)" -ne 0 ]; then
	echo "You must be root to do this."
	exit 1
fi

# Create the root directory.
mkdir -p $ROOT/LiveOS
cp rootfs.img $ROOT/LiveOS/rootfs.img

# Create squashfs image.
mksquashfs $ROOT squashfs.img -noappend -no-progress -comp lzo

# Delete the root directory.
rm -rf $ROOT
