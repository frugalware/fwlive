# this file included Makefile variables points
#
# # use -current or -stable system
TREE = current
# # font to be installed onto consoles
FWLFONT = lat2-16.psfu.gz
# # locale (short and long)
FWLSLANG = hu
FWLLLANG = hu_HU
# # codepage
FWLCP = iso-8859-2
# # installed apps group,  KDE / X / SERVER / MIN / MUSTHAVE
APPSGROUP = KDE
# # hostname
FWLHOST = fwlive
# # iso name
FWLSREL = FWLive-${APPSGROUP}
# # release name
FWLREL = 0.6-i686 (Voyager)
# # Live user
FWLUSER = fwlive
# # Live user pass
FWUSERPASS = ${FWLUSER}
# # Live root pass
FWROOTPASS = fwroot
# # frugalware version which livecd is based on
ifeq ($(TREE),current)
FWREL = $(shell date +%Y%m%d) (-current)
else
FWREL = 0.6 (Terminus)
endif
# # ISO name
ISONAME = ${FWLHOST}
# # big name
BIGN = Frugalware
# # saved directories
SAVEDIRS = etc home root var
# additional  packages to be installed
INST_MUSTHAVE_APPS = busybox-fwlive memtest86+ util-linux grub-theme-frugalware sudo aufs squashfs
INST_MIN_APPS = ${INST_MUSTHAVE_APPS} cdrtools openssh mc wget lynx nmap irssi \
	dbus hal wireless_tools ndiswrapper vim elinks links
INST_SERVER_APPS = ${INST_MIN_APPS} ncftp iptables proftpd fuseftp postfix bind \
	mysql libmysqlclient php php-cgi apache pure-ftpd phpmyadmin samba dhcp dhcpcd lighttpd fcgi
INST_X_APPS = ${INST_MIN_APPS} xorg-server fvwm mplayer alsa-utils alsa-tools-gui
INST_KDE_APPS = ${INST_X_APPS} kdebase openoffice.org-kde firefox kmplayer flashplugin qtparted

