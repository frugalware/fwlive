source /lib/initscripts/functions
TEXTDOMAIN=fwlive
TEXTDOMAINDIR=/usr/share/locale

actions=(start)

rc_start()
{
	fwgreet=$"\e[01mWelcome to \e[01;36mFwlive\e[0m\e[01m!\e[0m"
	((spaces=(($(tput cols) - $(echo -ne ${fwgreet} | wc -m) - 1)) / 2))
	echo -e "\n"
	for i in $(seq 1 ${spaces}) ; do
		echo -n ' '
	done
	echo -e "${fwgreet}\n"
}

rc_exec $1

